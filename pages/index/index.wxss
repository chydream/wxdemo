page{
  background: #f5f5f9;
}
.slide-image{
  height: 200px;
  width: 100%;
}
.cate-flex-row{
  height: 102px;
  background: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  align-content: center; 
}
.cate-flex-item{
  width: 25%;
}
.cate-p{
  text-align: center;
}
.icon-1{
  width: 42px;
  height: 42px;
  display: inline-block;
}
.cate-p text{
  font-size: 14px;
  color: #FF1700;
}
.product-flex-row{
  background: #fff;
  margin-top: 10px;
  padding: 15px 9px;
  display: inline-flex;
  flex-direction: row;
  flex-wrap: wrap;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
  align-content: center;
}
.product-flex-item{
  align-self:center;
  width: 48%;
  margin: 0 1% 10px;
  text-align: center;
}
.product-flex-item .img-wrap{
  width: 100%;
  height: 167px;
  margin: 0 auto
}
.product-image{
  width: 100%;
  max-width: 167px;
  max-height: 167px;
}
.product-title{
  max-width: 167px;
  font-size: 14px;
  color: #888888;
  text-align: left;
  margin:0 auto;
}
.product-flex-item .product-price{
  font-size: 14px;
  color: #E0AB7B;
  margin-top: 5px;
  position: relative;
  max-width: 167px;
  text-align: left;
  margin: 0 auto;
}
.product-buy{
  background-image: linear-gradient(-135deg, #FF8479 0%, #FE2913 100%);
  border-radius: 2px;
  width: 50px;
  height: 20px;
  display: inline-block;
  text-align: center;
  font-size: 12px;
  color: #FFFFFF;
  line-height: 20px;
  position: absolute;
  right: 3px;
}

@media (max-width: 320px){
  .img-wrap{
    height: 145px!important;
  }
  .product-image{
    width: 100%;
    height:145px;
    max-width: 167px;
    max-height: 167px;
  }
}